@startuml
scale 1000 width

class Exception {
}

class RuntimeException {
}

class IllegalArgumentException {
}


class ArrayIndexOutOfBoundsException {
}

class NullPointerException {
}

class FileNotFoundException {
}

Exception <|-- RuntimeException : extends
Exception <|-- FileNotFoundException : extends
RuntimeException <|-- ArrayIndexOutOfBoundsException : extends
RuntimeException <|-- NullPointerException : extends
RuntimeException <|-- IllegalArgumentException : extends

@enduml
